<div class="flex items-center justify-center h-screen" id="drill-index-container">
  <div>
    <%# TODO: Apply table styles %>
    <%# TODO: paginate %>
    <table>
      <caption class="text-center text-2xl">Your drills</caption>
      <thead>
        <tr>
          <th>Date</th>
          <th>Correct</th>
          <th>Incorrect</th>
          <th>Pass</th>
          <th>Total</th>
          <th>Accuracy</th>
        </tr>
      </thead>
      <tbody>
        <% @drills.each do |drill| %>
          <tr>
            <td class="text-blue-600 hover:text-blue-800
            visited:text-purple-600">
              <%= link_to drill.created_at.localtime.strftime("%Y-%m-%d %H:%M"),
                          drill_path(drill) %>
            </td>
            <td><%= drill.correct_count %></td>
            <td><%= drill.incorrect_count %></td>
            <td><%= drill.pass_count %></td>
            <td><%= drill.clues_seen_count %></td>
            <td><%= drill.accuracy %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
